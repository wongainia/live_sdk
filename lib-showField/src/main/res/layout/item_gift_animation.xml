<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prl_gift_animation_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_gift_anim_bg">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_gift_anim_avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_avatar"
                android:padding="5dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/iv_gift_anim_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:text="苏群苏群苏群苏群"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/iv_gift_anim_gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送出3个胶囊"
                    android:textColor="#9b9b9b"
                    android:textSize="12sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_gift_anim_img"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="60dp"
            android:padding="5dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/iv_gift_anim_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="15dp"
            android:text="x 1"
            android:textColor="#FEC436"
            android:textSize="20sp"
            android:textStyle="bold" />
    </FrameLayout>
</RelativeLayout>