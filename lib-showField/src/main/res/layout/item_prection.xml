<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_perction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1C"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_prection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textColor="#ffc0c0c0"
        android:textSize="16dp" />

    <View
        android:id="@+id/view_vertical"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_centerVertical="true"
        android:background="#00000000" />

    <View
        android:id="@+id/view_horizontal"
        android:layout_width="0.1dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="#00000000" />

    <TextView
        android:id="@+id/tv_update_devices"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:layout_below="@+id/view_vertical"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/view_horizontal"
        android:background="@drawable/shape_update_devices_bg"
        android:gravity="center"
        android:text="换设备"
        android:textColor="#ffffff"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_exit"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:layout_below="@+id/view_vertical"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/view_horizontal"
        android:background="@drawable/shape_exit_devices_bg"
        android:gravity="center"
        android:text="退出"
        android:textColor="#ffffff"
        android:textSize="13dp" />

</RelativeLayout>
